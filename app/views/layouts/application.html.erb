<!DOCTYPE html>
<html>
<head>
  <title>International Traveler Assurance</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="bg1">
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
     <%= link_to "#", class: 'navbar-brand' do %>
       <i class="fa fa-users"></i>
       ITA
       <% end %>
      </div>
      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "How it works", explanation_path %></li>
          <li><%= link_to "Pricing and products", pricing_path %></li>
          <li><%= link_to "Manage a policy", manage_path %></li>
          <li><%= link_to "About Us", about_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <div class="container">  
    <%= yield %>
  </div>
  <footer class="footer">
    <%= link_to "Contact Us", new_contact_path %>
  </footer>
  <script>
$(document).ready(function() {  

 $("nav li").click(function(){
        $("body").removeClass('bg1').addClass('bg2');
	});	
 $(".navbar-brand").click(function(){
        $("body").removeClass('bg1').addClass('bg2');
	});   
});

</script>
</body>
</html>
